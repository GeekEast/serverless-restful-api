{
  "compilerOptions": {
    "module": "commonjs",
    "strictNullChecks": false,
    "pretty": true,
    "skipLibCheck": false,
    "lib": ["es2015"],
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "es6",
    "outDir": ".build",
    "rootDir": "./",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop":true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  }
}
