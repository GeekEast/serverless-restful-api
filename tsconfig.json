{
  "compilerOptions": {
    "module": "commonjs",
    "strictNullChecks": false,
    "pretty": true,
    "skipLibCheck": true,
    "lib": ["es2015"],
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "es6",
    "outDir": "lib",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop":true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
